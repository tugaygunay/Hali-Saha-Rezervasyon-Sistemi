<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rezervasyon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t.g.halisaharezervasyon.RezervasyonActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="Saat Seçiniz..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSaatSeciniz" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Saha 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1" />

        <TextView
            android:text="Saha 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <ListView
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:id="@+id/lvSaha1" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvSaha2" />
    </LinearLayout>

    <TextView
        android:text="Kullanıcı Bilgilerinizi Giriniz..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="İsim Soyisim"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etIsimSoyisim"
            android:hint="İsim Giriniz" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <TextView
            android:text="Telefon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etTelefon"
            android:layout_weight="18.13"
            android:hint="Yalnızca Sayı" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="İşlemi Tamamla"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTamamla"
            android:onClick="tamamla" />

        <Button
            android:text="Tüm Rezervasyonları Görüntüle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoruntule"
            android:onClick="goruntule"
            android:layout_weight="0.05" />
    </LinearLayout>

</LinearLayout>
